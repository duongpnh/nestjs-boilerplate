{
  "name": "nestjs-boilerplate",
  "version": "0.0.1",
  "description": "NestJS Boilerplate",
  "author": "schowtinhtinhs",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "husky install",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:generate": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register --project ./tsconfig.json ./node_modules/typeorm/cli.js migration:generate -d src/config/data-source.config.ts",
    "migration:create": "yarn run typeorm migration:create",
    "migration:run": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register --project ./tsconfig.json ./node_modules/typeorm/cli.js migration:run -d src/config/data-source.config.ts",
    "migration:revert": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register --project ./tsconfig.json ./node_modules/typeorm/cli.js migration:revert -d src/config/data-source.config.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.9.4",
    "@nestjs/apollo": "^12.0.9",
    "@nestjs/common": "^10.2.7",
    "@nestjs/core": "^10.2.7",
    "@nestjs/graphql": "^12.0.9",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/platform-express": "^10.2.7",
    "@nestjs/swagger": "^7.1.14",
    "@nestjs/throttler": "^5.0.1",
    "@nestjs/typeorm": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.4",
    "helmet": "^7.0.0",
    "lint-staged": "^15.0.2",
    "pg": "^8.11.3",
    "pretty-error": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "request-context": "^2.0.0",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "typeorm-transactional": "^0.5.0",
    "winston": "3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.0",
    "@nestjs/schematics": "^10.0.2",
    "@nestjs/testing": "^10.2.7",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.9",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^3.2.4",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,tsx}": [
      "./node_modules/.bin/eslint --fix",
      "git add"
    ],
    "*.json": [
      "./node_modules/.bin/prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=18.12.1"
  }
}
